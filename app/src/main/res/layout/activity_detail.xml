<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="view_model"
            type="cc.sauerwein.popularmovies.viewmodels.MovieDetailViewModel" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26a69a"
                android:padding="24dp"
                android:textColor="@android:color/white"
                android:text="@{view_model.movie.title}"
                android:textSize="48sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp">

                <ImageView
                    android:id="@+id/iv_movie_poster_thumbnail"
                    android:layout_width="133dp"
                    android:layout_height="200dp"
                    android:contentDescription="@string/movie_poster_description"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_toEndOf="@id/iv_movie_poster_thumbnail"
                    android:layout_toRightOf="@id/iv_movie_poster_thumbnail"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{view_model.movie.getFormatedReleaseDate()}"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_user_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@{view_model.movie.getFormatedUserRating()}" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="48dp"
                        android:background="@{view_model.movie.favorite ? @color/colorAccent : @color/colorPrimary}"
                        android:onClick="favorite"
                        android:text="@string/mark_as_favorite"
                        android:textAllCaps="true" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@{view_model.movie.overview}" />
        </LinearLayout>
    </ScrollView>
</layout>